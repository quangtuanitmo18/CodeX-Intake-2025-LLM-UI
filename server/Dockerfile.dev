# syntax=docker/dockerfile:1.6

FROM node:20-bookworm AS base
WORKDIR /app

# Install dependencies (with dev deps for building)
FROM base AS deps
COPY package*.json ./
RUN npm ci

# Build TypeScript
FROM deps AS builder
COPY . .
RUN npm run build

# Install production dependencies only
FROM base AS prod-deps
COPY package*.json ./
RUN npm ci --omit=dev

# Generate Prisma Client (needs dev deps for generation)
FROM deps AS prisma-generate
COPY prisma ./prisma
COPY package*.json ./
RUN npx prisma generate

# Runtime image - use slim to reduce size
FROM node:20-bookworm-slim AS runner
WORKDIR /app
ENV NODE_ENV=development
ENV PORT=4000

# Install curl for healthcheck
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

# Copy only production dependencies and built files
COPY --from=prod-deps /app/node_modules ./node_modules
COPY --from=prisma-generate /app/node_modules/.prisma ./node_modules/.prisma
COPY --from=builder /app/dist ./dist
COPY package*.json ./
COPY prisma ./prisma
COPY scripts ./scripts

# Copy entrypoint script
COPY docker-entrypoint.sh /usr/local/bin/docker-entrypoint.sh
RUN chmod +x /usr/local/bin/docker-entrypoint.sh && \
    sed -i 's/\r$//' /usr/local/bin/docker-entrypoint.sh || true

EXPOSE 4000
HEALTHCHECK --interval=30s --timeout=5s --retries=3 \
  CMD curl -fsS http://localhost:4000/healthz || exit 1
ENTRYPOINT ["docker-entrypoint.sh"]
CMD ["node", "dist/index.js"]
