# syntax=docker/dockerfile:1.6

# ---------------------
# Base image
# ---------------------
FROM node:20-bookworm AS base
WORKDIR /app

# ---------------------
# Install dependencies (with dev deps)
# ---------------------
FROM base AS deps
COPY package*.json ./
RUN npm ci

# ---------------------
# Build TypeScript
# ---------------------
FROM deps AS builder
COPY . .
RUN npm run build

# ---------------------
# Install production deps only
# ---------------------
FROM base AS prod-deps
COPY package*.json ./
RUN npm ci --omit=dev

# ---------------------
# Generate Prisma Client
# ---------------------
# Use deps stage which has prisma CLI
FROM deps AS prisma-generate
COPY prisma ./prisma
RUN npx prisma generate

# ---------------------
# Runtime image
# ---------------------
FROM node:20-bookworm-slim AS runner
WORKDIR /app
ENV NODE_ENV=production
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/* && \
    groupadd -r appuser && useradd -r -g appuser -u 1001 appuser

COPY --from=prod-deps /app/node_modules ./node_modules
COPY --from=prisma-generate /app/node_modules/.prisma ./node_modules/.prisma
COPY --from=builder /app/dist ./dist
COPY package*.json ./
COPY prisma ./prisma

# Copy prisma CLI and its dependencies for runtime migrations
# This avoids needing internet connection for npx to download prisma
# Note: If these files don't exist, the build will fail, which is expected
# as we need prisma CLI for migrations
COPY --from=deps /app/node_modules/.bin/prisma ./node_modules/.bin/prisma
COPY --from=deps /app/node_modules/prisma ./node_modules/prisma

# Copy any scripts/assets needed at runtime (optional)
COPY scripts ./scripts

# Copy entrypoint script
COPY docker-entrypoint.sh /usr/local/bin/docker-entrypoint.sh
RUN chmod +x /usr/local/bin/docker-entrypoint.sh && \
    sed -i 's/\r$//' /usr/local/bin/docker-entrypoint.sh || true

# Don't switch to appuser yet - entrypoint will handle migrations first
# Then switch user before starting the server
RUN chown -R appuser:appuser /app

EXPOSE 4000
HEALTHCHECK --interval=30s --timeout=5s --retries=3 \
  CMD curl -fsS http://localhost:4000/healthz || exit 1
ENTRYPOINT ["docker-entrypoint.sh"]
CMD ["node", "dist/index.js"]

