# syntax=docker/dockerfile:1.6

FROM node:20-bookworm AS base
WORKDIR /app

# Install dependencies
FROM base AS deps
COPY package.json package-lock.json* ./
RUN npm ci

# Build Next.js
FROM base AS builder
ENV NODE_ENV=production
ENV NEXT_TELEMETRY_DISABLED=1
WORKDIR /app
COPY --from=deps /app/node_modules ./node_modules
COPY . .
# Allow public env overrides at build time
# Use localhost for browser compatibility (browser can't resolve Docker service names)
ARG NEXT_PUBLIC_API_ENDPOINT=http://localhost:4000
ARG NEXT_PUBLIC_URL=http://localhost:3000
ENV NEXT_PUBLIC_API_ENDPOINT=${NEXT_PUBLIC_API_ENDPOINT}
ENV NEXT_PUBLIC_URL=${NEXT_PUBLIC_URL}
RUN npm run build

# Runtime layer (Node.js - Next.js standalone)
FROM node:20-bookworm-slim AS runner
WORKDIR /app
# NODE_ENV will be set by docker-compose.dev.yml (development)
ENV NEXT_TELEMETRY_DISABLED=1

# Install curl for healthcheck (minimal)
RUN apt-get update && apt-get install -y --no-install-recommends curl && \
    rm -rf /var/lib/apt/lists/*

# Copy built application (standalone includes minimal node_modules)
COPY --from=builder /app/.next/standalone ./
COPY --from=builder /app/.next/static ./.next/static
COPY --from=builder /app/public ./public

EXPOSE 3000
ENV PORT=3000
ENV HOSTNAME="0.0.0.0"

HEALTHCHECK --interval=30s --timeout=5s --retries=3 \
  CMD curl -fsS http://localhost:3000/api/healthz || exit 1

CMD ["node", "server.js"]
