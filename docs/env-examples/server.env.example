# Fastify Server Environment Variables
# Copy this file to server/.env.local for local development
# For Docker, these are passed via docker-compose.yml or GitHub Actions secrets (production)

# Server Configuration
PORT=4000
NODE_ENV=development
DOMAIN=localhost
PROTOCOL=http

# Database
DATABASE_URL=file:./prisma/dev.db

# JWT Authentication
ACCESS_TOKEN_SECRET=your-access-token-secret-change-in-production
ACCESS_TOKEN_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=your-refresh-token-secret-change-in-production
REFRESH_TOKEN_EXPIRES_IN=7d

# Initial Admin User (created on first run)
INITIAL_EMAIL_USER=admin@example.com
INITIAL_PASSWORD_USER=admin123

# File Uploads
UPLOAD_FOLDER=./uploads

# Client URL (for CORS, redirects, etc.)
CLIENT_URL=http://localhost:3000

# Production Settings
PRODUCTION=false
DOCKER=false
PRODUCTION_URL=

# LLM API (optional, for AI features)
LLM_API_URL=
LLM_API_TOKEN=

