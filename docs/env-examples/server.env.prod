# Server Production Environment Variables
# Copy this to server/.env.prod (DO NOT commit to git)
# This file is used by docker-compose.prod.yml

# ============================================
# Server Configuration
# ============================================
PORT=4000
NODE_ENV=production
DOMAIN=tuandev.ru
PROTOCOL=https

# ============================================
# Database
# Docker path: /app/prisma/prod.db
# ============================================
DATABASE_URL="file:/app/prisma/prod.db"

# ============================================
# JWT Authentication Secrets
# Generate with: openssl rand -base64 32
# ============================================
ACCESS_TOKEN_SECRET=<generate-strong-random-secret-here>
REFRESH_TOKEN_SECRET=<generate-strong-random-secret-here>
ACCESS_TOKEN_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=7d
GUEST_ACCESS_TOKEN_EXPIRES_IN=15m
GUEST_REFRESH_TOKEN_EXPIRES_IN=12h

# ============================================
# Initial Admin User
# ============================================
INITIAL_EMAIL_USER=admin@tuandev.ru
INITIAL_PASSWORD_USER=<generate-strong-password-here>

# ============================================
# File Uploads
# ============================================
UPLOAD_FOLDER=uploads

# ============================================
# Timezone
# Check with: Intl.DateTimeFormat().resolvedOptions().timeZone
# ============================================
SERVER_TIMEZONE=Asia/Saigon

# ============================================
# Client URL (for CORS, redirects, etc.)
# ============================================
CLIENT_URL=https://tuandev.ru

# ============================================
# Google OAuth Configuration
# ============================================
GOOGLE_REDIRECT_CLIENT_URL=https://tuandev.ru/vi/login/oauth
GOOGLE_CLIENT_ID=<your-google-oauth-client-id>
GOOGLE_CLIENT_SECRET=<your-google-oauth-client-secret>
GOOGLE_AUTHORIZED_REDIRECT_URI=http://127.0.0.1:4000/auth/login/google

# ============================================
# Production Settings
# ============================================
PRODUCTION=true
DOCKER=true
PRODUCTION_URL=https://tuandev.ru

# ============================================
# LLM API Configuration (Optional)
# ============================================
LLM_API_URL=<your-llm-api-url>
LLM_API_TOKEN=<your-llm-api-token>
# LLM_API_MODEL=openai/gpt-5-mini

