# Root .env file for Production Docker Compose
# Copy this to root directory as .env (DO NOT commit to git)
# This file contains variables for docker-compose.prod.yml and client build args

# ============================================
# Docker Compose Variables
# ============================================
SERVER_PORT=4000
CLIENT_PORT=3000
DATABASE_URL=file:/app/prisma/prod.db

# ============================================
# Client Build-time Variables (NEXT_PUBLIC_*)
# These are passed as build args to client Dockerfile
# ============================================
NEXT_PUBLIC_API_ENDPOINT=https://tuandev.ru/api-fastify
NEXT_PUBLIC_URL=https://tuandev.ru
NEXT_PUBLIC_GOOGLE_CLIENT_ID=<your-google-oauth-client-id>
NEXT_PUBLIC_GOOGLE_AUTHORIZED_REDIRECT_URI=https://tuandev.ru/auth/login/google

